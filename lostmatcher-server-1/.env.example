# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lostmatcher
# or for Atlas: mongodb+srv://username:password@cluster.mongodb.net/database

# Server Configuration
NODE_ENV=development
PORT=5001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Optional - comment out to disable email service)
# SMTP_HOST=smtp.gmail.com
# SMTP_SERVICE=gmail
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password-from-google
# EMAIL_FROM=your-email@gmail.com

# Client URL for CORS and WebSocket
CLIENT_URL=http://localhost:3000

# Image Matching Service URL
IMAGE_MATCHING_SERVICE_URL=http://localhost:8000

# File Upload Configuration
MAX_FILE_SIZE=10485760