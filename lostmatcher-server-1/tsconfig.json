{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",                  // Add this for correct module lookup
    "esModuleInterop": true,
    "resolveJsonModule": true,                   // If you're importing .json files (common in config)
    "outDir": "./build",                          // Helps organize compiled output
    "rootDir": "./src",                          // Makes TypeScript treat only ./src as the source
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                            // Only include source folder
  "exclude": ["node_modules", "dist", "build"]            // Avoid compiling unnecessary files
}
